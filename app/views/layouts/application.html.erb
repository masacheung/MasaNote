<!DOCTYPE html>
<html>
  <head>
    <title>MasaNote</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('logo.png') %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script>
      window.currentUser = {
        "id": "<%= current_user.id %>",
        "username": "<%= current_user.username %>"
      }
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
